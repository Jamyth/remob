{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": ["ES2020", "DOM"],
        "module": "CommonJS",
        "target": "ES5",

        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "declarationMap": true,
        "jsx": "react",

        "rootDir": "../src",
        "outDir": "../dist/cjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "importsNotUsedAsValues": "preserve",
        "isolatedModules": true
    },
    "include": ["../src"]
}
